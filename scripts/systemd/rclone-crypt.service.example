[Unit]
Description=Rclone SHB-Crypt
Wants=network-online.target
After=network-online.target
 
[Service]
Type=notify
ExecStart=/usr/bin/rclone mount shb-crypt: /media/shb-crypt \
#--read-only \
--config /home/USER/docker/appdata/rclone/rclone.conf \
--log-file=/home/USER/docker/appdata/rclone/logs/shb-crypt.log \
--log-level INFO \
--allow-other \
--allow-non-empty \
--no-modtime \
--umask 002 \
--dir-cache-time 1000h \
--drive-chunk-size 256M \
--poll-interval 15s \
--user-agent proxmoxfileserver100 \
--buffer-size 256M \
--vfs-cache-mode full \
--vfs-cache-max-age 336h \
--cache-dir=/media/hdd1/cache/shb-crypt \
--vfs-cache-max-size 768G \
--vfs-read-chunk-size 32M \
--vfs-read-chunk-size-limit 2G \
--use-mmap 
ExecStop=/bin/fusermount -uz /media/shb-crypt
# ExecStartPost=/usr/bin/rclone rc vfs/refresh recursive=true --rc-addr 127.0.0.1:5572 _async=true
Restart=on-abort
User=USER
Group=USER
KillMode=none
RestartSec=5

[Install]
WantedBy=default.target
